{
  "name": "job-in",
  "version": "1.0.0",
  "description": "A website for job seekers and job providers",
  "main": "server.js",
  "scripts": {
    "start": "nodemon src/index.ts",
    "build": "tsc",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.{ts,js,json,md}'",
    "precommit": "npm run lint && npm run format",
